{
    "id": "com.prayerssapp",
    "version": "0.0.1",
    "compatibility": " >=2.0.0",
    "sdk": 2,
    "brandColor": "#2698DD",
    "name": {
        "en": "Prayers Alert App"
    },
    "description": {
        "en": "Trigger muslim prayers timing events based on your locations"
    },    
    "category": "tools",
    "tags": {
        "en": [
            "prayer",
            "prayers",
            "muslim",
            "timing",
            "time"
        ]
    },
    "images": {
        "large": "assets/images/large.jpg",
        "small": "assets/images/small.jpg"
    },
    "permissions": [
        "homey:manager:speech-output",
        "homey:manager:geolocation"
    ],
    "author": {
        "email": "dpanet@hotmail.com",
        "name": "Omar"
    },
    "bugs": {
        "url": "https://github.com/DPANET/PrayersHomey/issues"
    },
    "flow": {
        "actions": [
            {
                "id": "toggle_blind_action",
                "title": {
                    "en": "Toggle curtain on or off "
                },
                "args": [
                    {
                        "type": "device",
                        "name": "my_device",
                        "filter": "driver_id=axis"
                    }
                ]
            }
        ]
    }
}